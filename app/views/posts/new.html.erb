<h2>Add a new post</h2>
<%= form_with model: @post, url: new_post_path, method: :post, scope: :post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>
  <%= form.submit :'Create Post' %>
<% end %>
